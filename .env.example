# Auth (Neon Auth)
# Provided by Neon Console (Settings -> Auth) OR injected automatically for
# Vercel previews when using the Neon <-> Vercel integration with Auth enabled.
NEON_AUTH_BASE_URL=
# App-side HMAC secret used to sign cached session data cookies (32+ chars).
NEON_AUTH_COOKIE_SECRET=
# Optional: share cookies across subdomains (e.g. ".example.com")
NEON_AUTH_COOKIE_DOMAIN=

# App access policy (cost control)
# "restricted": only allow authenticated users whose email is in AUTH_ALLOWED_EMAILS
# "open": allow any authenticated user (use only after BYOK is implemented)
AUTH_ACCESS_MODE=restricted
# Comma-separated list of allowed emails (case-insensitive) when restricted
AUTH_ALLOWED_EMAILS=

# Database (Neon Postgres)
DATABASE_URL=

# Upstash Redis (cache + rate limit)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Upstash Vector (semantic search)
UPSTASH_VECTOR_REST_URL=
UPSTASH_VECTOR_REST_TOKEN=

# Upstash QStash (durable workflows)
QSTASH_TOKEN=
# Required to verify incoming QStash requests.
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=

# Vercel AI Gateway (OpenAI-compatible)
AI_GATEWAY_API_KEY=
AI_GATEWAY_BASE_URL=https://ai-gateway.vercel.sh/v1

# Vercel Blob (uploads)
BLOB_READ_WRITE_TOKEN=

# Web research
EXA_API_KEY=
FIRECRAWL_API_KEY=

# Vercel Sandbox (Code Mode)
VERCEL_OIDC_TOKEN=

# MCP / Context7 (optional: only if your MCP transport needs a key)
CONTEXT7_API_KEY=
